{
  "name": "is-install-needed",
  "description": "Tool to check if runnning npm/yarn install is necessary",
  "version": "1.0.0",
  "author": "Marcus Ekwall <marcus.ekwall@gmail.com>",
  "license": "ISC",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "is-install-needed": "./lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mekwall/is-install-needed.git"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.5",
    "@types/yargs": "^12.0.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "semantic-release": "^15.9.17",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "yarn-api": "^1.1.0"
  },
  "scripts": {
    "build": "tsc --skipLibCheck --declaration -p tsconfig.json",
    "test": "jest --runInBand",
    "coverage": "jest --coverage --runInBand"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/tests/.*\\.test\\.ts)",
    "collectCoverageFrom": [
      "src/**/*",
      "!**/node_modules/**"
    ]
  }
}
